<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.orderingapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_solidacefurnitureicon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_solidacefurnitureicon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:label="Solid Ace Furniture"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CartActivity"
            android:label="Cart"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckoutFormActivity"
            android:label="Checkout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckoutActivity"
            android:label="New Customer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PaymentMethodActivity"
            android:label="@string/title_activity_payment_method"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PaymentMethodDetailsActivity"
            android:label="@string/title_activity_payment_method_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>